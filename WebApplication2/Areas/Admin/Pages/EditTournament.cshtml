@page
@model WebApplication2.Areas.Admin.Pages.EditTournamentModel

@{
    ViewData["Title"] = "EditTournament";
}

<h1>EditTournament</h1>

<h4>Tournaments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tournaments.Id" />
            <div class="form-group">
                <label asp-for="Tournaments.Tournament_name" class="control-label"></label>
                <input asp-for="Tournaments.Tournament_name" class="form-control" />
                <span asp-validation-for="Tournaments.Tournament_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournaments.Info_box" class="control-label"></label>
                <textarea rows="12" cols="100" asp-for="Tournaments.Info_box" class="form-control"></textarea>
                <span asp-validation-for="Tournaments.Info_box" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournaments.Date_of_publish" class="control-label"></label>
                <input asp-for="Tournaments.Date_of_publish" class="form-control" />
                <span asp-validation-for="Tournaments.Date_of_publish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournaments.UserId" class="control-label"></label>
                <select asp-for="Tournaments.UserId" class="form-control" asp-items="@Model.UsersList"></select>
                <span asp-validation-for="Tournaments.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./ListTournament">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
